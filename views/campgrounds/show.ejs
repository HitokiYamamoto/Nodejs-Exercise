<% layout('/layouts/boilerplate') -%>

    <body>
        <h1>
            <%= campground.title %>
        </h1>
        <h2>
            <%= campground.location %>
        </h2>
        <img src="<%= campground.image %>" alt="<%= campground.title %>">
        <p>
            <%= campground.description %>
        </p>
        <p><a href="/campgrounds/<%= campground._id %>/edit">編集する</a></p>
        <p>
        <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
            <button>削除する</button>
        </form>
        </p>
        <footer>
            <a href="/campgrounds">一覧に戻る</a>
        </footer>

    </body>

    </html>